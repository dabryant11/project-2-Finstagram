<h1>NEW COMMENT</h1>

<%= form_for @comment, controller: 'comments', action: 'create' do |f| %>

<%=f.label"Picture"%>
<%=f.collection_select :picture_id, Picture.all, :id, :title%>
<%=f.label"User"%>
<%=f.collection_select :user_id, User.all, :id, :name%>

<%=f.label"Content"%>
<%=f.text_field :content%>
<%=f.submit "SUBMIT"%>

<%end%>
