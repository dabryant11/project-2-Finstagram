




<ul id="picture">
<h1><%=@picture.title%>
</h1>
<br>
<p>
<img src="<%=@picture.image_url%>" alt= "<%@picture.title%>" width = "200" height=auto/>
<br>
<%= button_to "edit", edit_picture_path(@picture), method: :get %>
<br>
<%= button_to "delete", picture_path(@picture),  method: :delete, data: {confirm: "Are you sure you want to delete this?"} %>
<br>
<%@picture.tags.each do |tag|%>
#<%=tag.name%>
<br>
<%end%>
<br>
<br>
<br>
<%@picture.comments.each do |comment|%>
<%=link_to comment.user.username, user_path(comment.user.id)%>
<%=comment.content%>
<br>
<%end%>
<br>
<%= button_to "NEW COMMENT", new_comment_path, method: :get %>
<br>
</ul>